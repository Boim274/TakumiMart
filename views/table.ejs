<!-- DataTales Example -->
<div class="">
  <div class="">
    <!-- Button untuk menampilkan modal tambah produk -->
    <button
      type="button"
      class="btn btn-outline-primary btn-sm"
      data-toggle="modal"
      data-target="#add-modal"
    >
    <i class="bi bi-plus-lg"></i>Tambah Produk
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead class="table-dark text-white text-center">
          <tr>
            <th>No</th>
            <th>Nama Produk</th>
            <th>Harga</th>
            <th>Deskripsi</th>
            <th>Kategori</th>
            <th>Gambar Produk</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < produk.length; i++){ %>
          <tr>
            <td class="text-center"><%= i +1 %></td>
            <td><%= produk[i].nama_produk %></td>
            <td><%= produk[i].harga %></td>
            <td><%= produk[i].deskripsi %></td>
            <td><%= produk[i].kategori %></td>
            <td class="text-center">
              <img src="<%= produk[i].gambar_produk %>" alt="Product Image" class="img-thumbnail" width="80">
            </td>
            <td class="text-center">
              <form action="/produk/<%= produk[i].id %>?_method=DELETE" method="POST">
              <!-- Button untuk menampilkan modal edit -->
              <a href="javascript:void(0)"
                class="btn btn-outline-success btn-sm button-update"
                data-id="<%= produk[i]._id %>"
                data-nama_produk="<%= produk[i].nama_produk %>"
                data-harga="<%= produk[i].harga %>"
                data-deskripsi="<%= produk[i].deskripsi %>"
                data-kategori="<%= produk[i].kategori %>"
                data-gambar_produk="<%= produk[i].gambar_produk %>"
              ><i class="bi bi-pencil"></i>Edit</a>
              <!-- Button untuk menghapus -->
              <button type="submit" class="btn btn-outline-danger btn-sm button-delete" onclick="return confirm('Yakin ingin menghapus Produk?');">
                <i class="bi bi-trash"></i>Hapus</button>
            </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
